<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kotlintest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="expandedStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="collapsedStyle" parent="expandedStyle">
        <item name="android:textSize">24sp</item>
    </style>
</resources>